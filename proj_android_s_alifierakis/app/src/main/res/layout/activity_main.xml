<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_txt_automate_1"
            android:textSize="15sp"
            android:text="Automate 1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainClickManager"
            android:id="@+id/bt_main_text_automate_1"
            android:textSize="15sp"
            android:text="Controler l'automate 1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_txt_automate_2"
            android:textSize="15sp"
            android:text="Automate 1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainClickManager"
            android:id="@+id/bt_main_text_automate_2"
            android:textSize="15sp"
            android:text="Controler l'automate 2" />

    </LinearLayout>
</LinearLayout>
